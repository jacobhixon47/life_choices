<section id="banner">
  <header>
    <h2>Hi. You're looking at <strong>Helios</strong>.</h2>
    <%= link_to "New Question", new_question_path, id: 'new_question_link', remote: true %>
  </header>
</section>

<!-- Carousel -->
<% if @questions.any? %>
  <section class="carousel">
    <div class="reel">
      <% @questions.each do |question| %>
        <article>
          <a class="image featured"><%= image_tag "pic01.jpg" %></a>
          <header>
            <h3>Would you rather...</h3>
          </header>
          <a><p><%= question.option_one %></p></a>
          <h3>Or</h3>
          <br>
          <a><p><%= question.option_two %></p></a>
        </article>
      <% end %>
    </div>
  </section>
<% end %>
